<%= will_paginate @movies %>
<h1>Movies</h1>

<body>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Summary</th>
        <th>Status </th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.name %></td>
          <td><%= movie.summary %></td>
          <td><%= movie.status %></td>
          <% if movie.status == "Now Showing" %>
            <td><%= link_to 'Book', movie, class: 'btn btn-primary btn-lg' %></td>
          <% else %>
            <td><%= link_to 'Subscribe', movie_interests_path(:movie_id => movie.id), method: :post, class: 'btn btn-primary btn-lg' %></td>
          <% end %>
          <% if current_user.role == "critic"  && movie.status == "Now Showing" %>
            <td><%= link_to "Review", new_review_path(:id => movie.id) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<br />
<%= will_paginate @movies %>
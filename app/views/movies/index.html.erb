<%= will_paginate @movies %>
<div class="container">
  </div>
<h1>Movies</h1>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Summary</th>
      <th>Status </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.name %></td>
      <td><%= movie.summary %></td>
      <td><%= movie.status %></td>
      <% if movie.status == "now_showing" %>
      <td><%= link_to 'Book', movie, class: 'btn btn-primary btn-lg' %></td>
      <% else %>
      <td><%= link_to 'Subscribe', add_movie_interest_path(:movie_id => movie.id), class: 'btn btn-primary btn-lg' %></td>
      <% end %>
      <td>
      <% if current_user.role == "critic"  && movie.status == "now_showing"%>
        <%=link_to "Review", new_review_path(:id => movie.id) %>
      <% end %>
      </td>
    </tr>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
<%= will_paginate @movies %>
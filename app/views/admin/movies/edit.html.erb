<h1>Editing Movie</h1>
<div class= "row">
  <div class="col-md-4 col-md-offset-4">
    <%= render 'form', admin_movie: @admin_movie %>
    <%= form_for(:admin_movie, :url => {:action => 'update'}) do |f| %>

        <div class= "form-horizontal">
          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name , class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label :summary %>
            <%= f.text_field :summary , class: 'form-control' %>
          </div>

          <div class="radio-inline">
            <%= f.radio_button :status, 'now_showing'  %>
            <%= f.label :status, "Now Showing" %><br />
          </div><br>

          <div class="radio-inline">
            <%= f.radio_button :status, 'future_release'  %>
            <%= f.label :status, "Future Release" %><br />
          </div>

          <div class="actions">
            <%= f.submit "Save" , class: 'btn btn-primary'%>
          </div>
        <% end %>
        </div>
     
    <%= link_to 'Show', @admin_movie %> |
    <%= link_to 'Back', admin_movies_path %>
 </div>
</div>

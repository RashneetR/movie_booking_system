<h1>Editing Movie</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="form-horizontal">
      <%= error_messages_for(@admin_movie) %>
      <%= form_for(:admin_movie, :url => {:action => 'update'}) do |f| %>
      
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name , class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :image %><br />
          <%= f.file_field :image, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :summary %>
          <%= f.text_field :summary , class: 'form-control' %>
        </div>

        <div class="radio-inline">
          <%= f.radio_button :status, 'Now Showing' %>
          <%= f.label :status, "Now Showing" %><br />
        </div><br />

        <div class="radio-inline">
          <%= f.radio_button :status, 'Future Release' %>
          <%= f.label :status, "Future Release" %><br />
        </div>

        <div class="actions">
          <%= f.submit "Save" , class: 'btn btn-primary' %>
        </div>
      <% end %>
      <%= link_to 'Back', admin_movies_path %>
    </div>
 </div>
</div>
<h1>New Movie</h1>

<%= render 'form', admin_movie: @admin_movie %>
<%= form_for(:admin_movie, :url => {:action => 'create'}) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :summary %>
    <%= f.text_field :summary %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.radio_button :status, 'now_showing' %>
    <%= f.label :status, "Now Showing" %><br />
  </div>

  <div class="field">
    <%= f.radio_button :status, 'future_release' %>
    <%= f.label :status, "Future Release" %><br />
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= link_to 'Back', admin_movies_path %>

<h1>New Movie</h1>

<%= render 'form', admin_movie: @admin_movie %>
<%= form_for(:admin_movie, :url => {:action => 'create'}) do |f| %>
<div class= "form-horizontal">
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name , class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :summary %>
    <%= f.text_field :summary , class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: 'form-control'  %>
  </div>

  <div class="field">
    <%= f.radio_button :status, 'now_showing' , class: 'form-control' %>
    <%= f.label :status, "Now Showing" %><br />
  </div>

  <div class="field">
    <%= f.radio_button :status, 'future_release' , class: 'form-control' %>
    <%= f.label :status, "Future Release" %><br />
  </div>

  <div class="actions">
    <%= f.submit "Create", class: 'btn btn-primary'%>
  </div>
  </div>
<% end %>
<%= link_to 'Back', admin_movies_path %>

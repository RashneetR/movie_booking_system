<link href="path/to/select2.min.css" rel="stylesheet" />
<script src="path/to/select2.min.js"></script>
<script>
$('.js-example-basic-single').select2({
  placeholder: 'Select an option'
});
</script>


<br>
<script>
   $(".mySelect2").select2({theme: "classic"});
</script>

<%= will_paginate @admin_shows %>
<p id="notice"><%= notice %></p>

<h1>Admin Shows</h1>

  <%= form_for(:admin_show, :url => {:action => 'search'}) do |f| %>
  <div class="mySelect">
  <%= f.label :movie_id %>
  <%= f.select("movie_id", @m.collect { |m| [m.name, m.id]}, {prompt: 'Select Movie'},{class: 'mySelect2'}) %>
  </div>
  <select class="js-example-basic-single" name="state">
  <option value="AL">Alabama</option>
    ...
  <option value="WY">Wyoming</option>
</select>


  <table>
    <thead>
      <tr>
        <th>Movie Name</th>
        <th>Theatre Name</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Booking State</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @admin_shows.each do |admin_show| %>
        <tr>
          <td><%= admin_show.movie.name %></td>
          <td><%= admin_show.theatre.name %></td>
          <td><%= admin_show.start_time %></td>
          <td><%= admin_show.end_time %></td>
          <td><%= admin_show.booking_state %></td>
          <td><%= link_to 'Show', admin_show_path(admin_show) %></td>
          <td><%= link_to 'Edit', edit_admin_show_path(admin_show) %></td>
          <td><%= link_to 'Destroy', admin_show_path(admin_show), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br />
<% end %>
<%= will_paginate @admin_shows %>

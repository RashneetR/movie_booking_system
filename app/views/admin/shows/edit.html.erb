<h1>Editing Admin Show</h1>

<%= render 'form', admin_show: @admin_show %>
<%= form_for(:admin_show, :url => {:action => 'update'}) do |f| %>

<div class="field">
    <%= f.label :movie_id%>
    <%= f.select("movie_id", @m.all.collect { |m| [m.name, m.id]}, {prompt: 'Select Movie'}) %>
  </div>

  <div class="field">
    <%= f.label :theatre_id%>
    <%= f.select("theatre_id", @theatre.all.collect { |t| [t.name, t.id]}, {prompt: 'Select Theatre'}) %>
  </div>
  <div class="field">
    <%= f.label :start_time %>
    <%= f.text_field :start_time %>
  </div>

  <div class="field">
    <%= f.label :end_time %>
    <%= f.text_field :end_time %>
  </div>

  <div class="field">
    <%= f.label :total_seats %>
    <%= f.text_field :total_seats %>
  </div>

  <div class="field">
    <%= f.label :num_seats_sold %>
    <%= f.text_field :num_seats_sold %>
  </div>

  <div class="field">
    <%= f.label :cost_per_seat %>
    <%= f.text_field :cost_per_seat %>
  </div>


  <div class="actions">
    <%= f.submit "Save"%>
  </div>
<% end %>

<%= link_to 'Show', @admin_show %> |
<%= link_to 'Back', admin_shows_path %>

<h1>Editing Admin Theatre</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="form-horizontal">
      <%= error_messages_for(@admin_theatre) %>
      <%= form_for(@admin_theatre, as: :admin_theatre, url: admin_theatre_path(@admin_theatre), html: { method: :patch}) do |f| %>
    
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name , class: 'form-control' %>
        </div>

        <%= f.fields_for :address do |ff| %>
          <div>
            <%= ff.label :address %>
            <%= ff.text_field :address, class: 'form-control' %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Save" , class: 'btn btn-primary' %>
        </div>
      <% end %>
      <%= link_to 'Back', admin_theatres_path %>
    </div>
  </div>
</div>
<div class="form-horizontal">
  <h1>New Admin Theatre</h1>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= render 'form', admin_theatre: @admin_theatre %>
      <%= form_for(:admin_theatre, :url => {:action => 'create'}) do |f| %>
        <div class="form-group">
          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name , class: 'form-control' %>
          </div>

          <%= f.fields_for :address do |ff| %>
            <div>
              <%= ff.label :address %>
              <%= ff.text_field :address, class: 'form-control' %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Create", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
      <%= link_to 'Back', admin_theatres_path %>
    </div>
  </div>
</div>
<h1>Editing User</h1>

<%= render 'form', user: @user %>
<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <% if current_user.role == "admin" %>
    <%= f.text_field :name, :readonly => true%>
    <% else %>
    <%= f.text_field :name%>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <% if current_user.role == "admin" %>
    <%= f.text_field :email, :readonly => true %>
    <% else %>
    <%= f.text_field :email%>
    <% end %>
  </div>

  <div class="field">
    <%= f.radio_button :role, 'customer'%>
    <%= f.label :role, "Customer" %><br />
  </div>

  <div class="field">
    <%= f.radio_button :role, 'critic'%>
    <%= f.label :role, "Critic" %><br />
  </div>

  <div class="actions">
    <%= f.submit "Save"%>
  </div>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
